{
  "name": "recidiviz.com",
  "version": "1.0.0",
  "description": "Tracking criminal justice metrics in real time",
  "private": true,
  "repository": "git@github.com:Recidiviz/recidiviz.com.git",
  "author": "Recidiviz <team@recidiviz.com>",
  "license": "GNU General Public License v3",
  "scripts": {
    "analyze-bundle": "open ./build/report.html",
    "build": "webpack --mode production",
    "start": "webpack-dev-server --mode development --open",
    "test": "eslint src && jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test",
      "pre-push": "yarn test"
    }
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/lib/static/"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFiles": [
      "<rootDir>/src/config/jestSetup.js"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.0.0-rc.1",
    "jest": "^22.4.3",
    "style-loader": "^0.21.0",
    "webpack": "^4.5.0",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3"
  },
  "dependencies": {
    "animejs": "^2.2.0",
    "babel-runtime": "^6.26.0",
    "charming": "^2.2.3",
    "d3": "^5.1.0",
    "jquery": "^3.3.1",
    "jquery-ui": "^1.12.1",
    "jquery-ui-touch-punch": "^0.2.3",
    "mustache": "^2.3.0",
    "nunito-fontface": "^0.7.2",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "tachyons": "^4.9.1",
    "typeface-squada-one": "^0.0.54"
  }
}
