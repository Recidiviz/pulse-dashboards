{
  "name": "jii-functions",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/jii-functions/src",
  "projectType": "application",
  "targets": {
    "lint-files": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint",
        "cwd": "{projectRoot}"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc -p ./tsconfig.app.json"],
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "development",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/jii-functions",
        "format": ["cjs"],
        "bundle": true,
        "main": "apps/jii-functions/src/main.ts",
        "tsConfig": "apps/jii-functions/tsconfig.app.json",
        "generatePackageJson": true,
        "target": "node20",
        "esbuildConfig": "{projectRoot}/esbuild.config.js"
      },
      "configurations": {
        "development": {},
        "staging": {},
        "production": {}
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx build jii-functions -c development --watch",
          "firebase -c firebase.jii.json -P recidiviz-jii-staging emulators:start"
        ]
      }
    }
  },
  "tags": []
}
