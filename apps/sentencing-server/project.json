{
  "name": "sentencing-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/sentencing-server/src",
  "projectType": "application",
  "tags": ["sentencing-server"],
  "targets": {
    "test-zod": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx test-zod/index.ts",
        "cwd": "{projectRoot}"
      }
    },
    "load-env-files": {
      "executor": "nx:run-commands",
      "options": {
        "command": "../../tools/load_env_files.sh --env env_sentencing_server --env_staging env_staging_sentencing_server --env_prod env_prod_sentencing_server --env_test env_test_sentencing_server --env_preview env_preview_sentencing_server",
        "cwd": "{projectRoot}"
      }
    },
    "lint-files": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint --max-warnings 0",
        "cwd": "{projectRoot}"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "dependsOn": [
        {
          "projects": ["@sentencing-server/prisma"],
          "target": "prisma-generate"
        }
      ],
      "options": {
        "commands": [
          "tsc -p ./tsconfig.app.json",
          "tsc -p ./tsconfig.spec.json"
        ],
        "cwd": "{projectRoot}"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "dependsOn": [
        {
          "projects": ["@sentencing-server/prisma"],
          "target": "docker"
        },
        {
          "projects": ["@sentencing-server/prisma"],
          "target": "prisma-seed"
        }
      ],
      "options": {
        "command": "vite-node --watch src/main.ts",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "dependsOn": [
        {
          "projects": ["@sentencing-server/prisma"],
          "target": "prisma-generate"
        }
      ],
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/sentencing-server",
        "bundle": true,
        "main": "{projectRoot}/src/main.ts",
        "additionalEntryPoints": ["{projectRoot}/src/sentry/index.ts"],
        "tsConfig": "{projectRoot}/tsconfig.app.json",
        "generatePackageJson": true,
        "target": "node20",
        "minify": true,
        "assets": [
          {
            "glob": "prisma/schema.prisma",
            "input": "{workspaceRoot}/libs/@sentencing-server/prisma",
            "output": "."
          },
          {
            "glob": "prisma/migrations/**/*",
            "input": "{workspaceRoot}/libs/@sentencing-server/prisma",
            "output": "."
          },
          "{projectRoot}/scripts/*"
        ]
      },
      "configurations": {
        "dev": {},
        "staging": {
          "sourcemap": true,
          "esbuildConfig": "{workspaceRoot}/libs/common/server-setup-plugin/esbuild.config.js"
        },
        "cherry-pick": {
          "sourcemap": true,
          "esbuildConfig": "{workspaceRoot}/libs/common/server-setup-plugin/esbuild.config.js"
        }
      },
      "defaultConfiguration": "dev"
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "dependsOn": [
        {
          "projects": ["@sentencing-server/prisma"],
          "target": "docker"
        },
        {
          "projects": ["@sentencing-server/prisma"],
          "target": "prisma-seed"
        },
        "build"
      ],
      "options": {
        "buildTarget": "sentencing-server:build"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": [
        {
          "projects": ["@sentencing-server/prisma"],
          "target": "docker"
        }
      ],
      "outputs": ["{workspaceRoot}/coverage/apps/sentencing-server"],
      "cache": true,
      "options": {
        "command": "nx prisma-push @sentencing-server/prisma && cd apps/sentencing-server && vitest",
        "cwd": "{workspaceRoot}"
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "dependsOn": ["build"],
      "cwd": "{projectRoot}",
      "options": {
        "engine": "docker",
        "platforms": ["linux/amd64"]
      },
      "configurations": {
        "dev": {
          "push": false
        },
        "staging": {
          "push": true,
          "tags": [
            "us-central1-docker.pkg.dev/recidiviz-dashboard-staging/cloud-run-source-deploy/sentencing-server:$COMMIT_SHA",
            "us-central1-docker.pkg.dev/recidiviz-dashboard-staging/cloud-run-source-deploy/sentencing-server:latest"
          ]
        },
        "cherry-pick": {
          "push": true,
          "tags": [
            "us-central1-docker.pkg.dev/recidiviz-dashboard-staging/cloud-run-source-deploy/sentencing-server:$COMMIT_SHA"
          ]
        },
        "preview": {
          "push": true,
          "tags": [
            "us-central1-docker.pkg.dev/recidiviz-dashboard-staging/cloud-run-source-deploy/sentencing-server-preview:$VERSION"
          ]
        }
      },
      "defaultConfiguration": "dev"
    },
    "create-preview-db": {
      "executor": "nx:run-commands",
      "options": {
        "command": "../../tools/clone_sentencing_db.sh",
        "cwd": "{projectRoot}"
      }
    },
    "migrate-db": {
      "executor": "nx:run-commands",
      "dependsOn": ["load-env-files"],
      "options": {
        "command": "gcloud run jobs deploy sentencing-server-migrate-db --image us-central1-docker.pkg.dev/recidiviz-dashboard-staging/cloud-run-source-deploy/sentencing-server:$COMMIT_SHA --region us-central1 --execute-now --wait --command ./scripts/migrate-dbs.sh --set-env-vars DATABASE_URL_US_ID=$DATABASE_URL_US_ID,DATABASE_URL_US_ND=$DATABASE_URL_US_ND"
      },
      "configurations": {
        "staging": {
          "args": [
            "--project recidiviz-dashboard-staging",
            "--set-cloudsql-instances recidiviz-dashboard-staging:us-central1:sentencing-db",
            "--service-account sentencing-server@recidiviz-dashboard-staging.iam.gserviceaccount.com"
          ]
        },
        "production": {
          "args": [
            "--project recidiviz-dashboard-production",
            "--set-cloudsql-instances recidiviz-dashboard-production:us-central1:sentencing-db",
            "--service-account sentencing-server@recidiviz-dashboard-production.iam.gserviceaccount.com"
          ]
        },
        "preview": {
          "command": "gcloud run jobs deploy ss-migrate-preview-db-$VERSION --image us-central1-docker.pkg.dev/recidiviz-dashboard-staging/cloud-run-source-deploy/sentencing-server-preview:$VERSION --region us-central1 --execute-now --wait --command ./scripts/migrate-dbs.sh --set-env-vars DATABASE_URL_US_ID=$DATABASE_URL_US_ID-$VERSION,DATABASE_URL_US_ND=$DATABASE_URL_US_ND-$VERSION",
          "args": [
            "--project recidiviz-dashboard-staging",
            "--set-cloudsql-instances recidiviz-dashboard-staging:us-central1:s-db-preview-$VERSION",
            "--service-account sentencing-server@recidiviz-dashboard-staging.iam.gserviceaccount.com"
          ]
        }
      },
      "defaultConfiguration": "staging"
    },
    "deploy-app": {
      "executor": "@nx-extend/gcp-cloud-run:deploy",
      "dependsOn": ["load-env-files", "migrate-db"],
      "options": {
        "region": "us-central1",
        "envVars": {
          "AUTH0_DOMAIN": "$AUTH0_DOMAIN",
          "AUTH0_AUDIENCE": "$AUTH0_AUDIENCE",
          "SENTRY_DSN": "$SENTRY_DSN",
          "SENTRY_ENV": "$SENTRY_ENV",
          "CLOUD_STORAGE_NOTIFICATION_IAM_EMAIL": "$CLOUD_STORAGE_NOTIFICATION_IAM_EMAIL",
          "IMPORT_CLOUD_TASK_PROJECT": "$IMPORT_CLOUD_TASK_PROJECT",
          "IMPORT_CLOUD_TASK_LOCATION": "$IMPORT_CLOUD_TASK_LOCATION",
          "IMPORT_CLOUD_TASK_QUEUE": "$IMPORT_CLOUD_TASK_QUEUE",
          "IMPORT_CLOUD_TASK_URL": "$IMPORT_CLOUD_TASK_URL",
          "IMPORT_CLOUD_TASK_SERVICE_ACCOUNT_EMAIL": "$IMPORT_CLOUD_TASK_SERVICE_ACCOUNT_EMAIL",
          "IMPORT_BUCKET_ID": "$IMPORT_BUCKET_ID",
          "DATABASE_URL_US_ID": "$DATABASE_URL_US_ID",
          "DATABASE_URL_US_ND": "$DATABASE_URL_US_ND"
        }
      },
      "configurations": {
        "staging": {
          "project": "recidiviz-dashboard-staging",
          "image": "us-central1-docker.pkg.dev/recidiviz-dashboard-staging/cloud-run-source-deploy/sentencing-server:$COMMIT_SHA",
          "cloudSqlInstance": "recidiviz-dashboard-staging:us-central1:sentencing-db",
          "memory": "512Mi",
          "serviceAccount": "sentencing-server@recidiviz-dashboard-staging.iam.gserviceaccount.com"
        },
        "production": {
          "project": "recidiviz-dashboard-production",
          "image": "us-central1-docker.pkg.dev/recidiviz-dashboard-staging/cloud-run-source-deploy/sentencing-server:$COMMIT_SHA",
          "cloudSqlInstance": "recidiviz-dashboard-production:us-central1:sentencing-db",
          "memory": "512Mi",
          "serviceAccount": "sentencing-server@recidiviz-dashboard-production.iam.gserviceaccount.com"
        },
        "preview": {
          "name": "ss-preview-$VERSION",
          "project": "recidiviz-dashboard-staging",
          "image": "us-central1-docker.pkg.dev/recidiviz-dashboard-staging/cloud-run-source-deploy/sentencing-server-preview:$VERSION",
          "cloudSqlInstance": "recidiviz-dashboard-staging:us-central1:s-db-preview-$VERSION",
          "memory": "512Mi",
          "envVars": {
            "AUTH0_DOMAIN": "$AUTH0_DOMAIN",
            "AUTH0_AUDIENCE": "$AUTH0_AUDIENCE",
            "SENTRY_DSN": "$SENTRY_DSN",
            "SENTRY_ENV": "$SENTRY_ENV",
            "CLOUD_STORAGE_NOTIFICATION_IAM_EMAIL": "$CLOUD_STORAGE_NOTIFICATION_IAM_EMAIL",
            "IMPORT_CLOUD_TASK_PROJECT": "$IMPORT_CLOUD_TASK_PROJECT",
            "IMPORT_CLOUD_TASK_LOCATION": "$IMPORT_CLOUD_TASK_LOCATION",
            "IMPORT_CLOUD_TASK_QUEUE": "$IMPORT_CLOUD_TASK_QUEUE",
            "IMPORT_CLOUD_TASK_URL": "$IMPORT_CLOUD_TASK_URL",
            "IMPORT_CLOUD_TASK_SERVICE_ACCOUNT_EMAIL": "$IMPORT_CLOUD_TASK_SERVICE_ACCOUNT_EMAIL",
            "IMPORT_BUCKET_ID": "$IMPORT_BUCKET_ID",
            "DATABASE_URL_US_ID": "$DATABASE_URL_US_ID-$VERSION",
            "DATABASE_URL_US_ND": "$DATABASE_URL_US_ND-$VERSION"
          },
          "serviceAccount": "sentencing-server@recidiviz-dashboard-staging.iam.gserviceaccount.com"
        }
      },
      "defaultConfiguration": "staging"
    },
    "cleanup-preview-resources": {
      "executor": "nx:run-commands",
      "options": {
        "command": "gcloud run services delete ss-preview-$VERSION --project recidiviz-dashboard-staging --region us-central1 -q && gcloud run jobs delete ss-migrate-preview-db-$VERSION --project recidiviz-dashboard-staging --region us-central1 -q && gcloud sql instances delete s-db-preview-$VERSION --project recidiviz-dashboard-staging -q"
      }
    }
  }
}
