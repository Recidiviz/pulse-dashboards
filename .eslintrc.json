{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx", "simple-import-sort", "vitest", "mobx"],
  "overrides": [
    {
      "files": "*.json",
      "parser": "jsonc-eslint-parser",
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "extends": ["plugin:mobx/recommended"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            // This allows us to use self-referencing path aliases in an application
            "allowCircularSelfDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              }
            ]
          }
        ],
        "array-callback-return": [
          "warn",
          {
            "allowImplicit": true
          }
        ],
        "simple-import-sort/imports": "error",
        "simple-import-sort/exports": "error",
        "no-restricted-imports": [
          "error",
          {
            "paths": [
              {
                "name": "styled-components",
                "message": "Please import from styled-components/macro."
              }
            ],
            "patterns": ["~fastify-data-import-plugin/*"]
          }
        ],
        // TODO(#5767): Enable these checks
        "mobx/missing-observer": "off",
        "mobx/exhaustive-make-observable": "off"
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.test.ts", "*.test.tsx", "*.test.js", "*.test.jsx"],
      "extends": ["plugin:vitest/legacy-recommended"]
    },
    {
      "files": ["*.mjs", "*.mts"],
      "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": "latest"
      }
    }
  ]
}
