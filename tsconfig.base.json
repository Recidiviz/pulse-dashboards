{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "paths": {
      "~@case-notes-server/trpc": ["libs/@case-notes-server/trpc/src/index.ts"],
      "~@case-notes-server/trpc/*": ["libs/@case-notes-server/trpc/src/*"],
      "~@jii-texting-server/prisma": [
        "libs/@jii-texting-server/prisma/src/index.ts"
      ],
      "~@jii-texting-server/prisma/*": [
        "libs/@jii-texting-server/prisma/src/*"
      ],
      "~@sentencing-server/prisma": [
        "libs/@sentencing-server/prisma/src/index.ts"
      ],
      "~@sentencing-server/prisma/*": ["libs/@sentencing-server/prisma/src/*"],
      "~@sentencing-server/trpc": ["libs/@sentencing-server/trpc/src/index.ts"],
      "~@sentencing-server/trpc-types": [
        "libs/@sentencing-server/trpc-types/src/index.ts"
      ],
      "~@sentencing-server/trpc/*": ["libs/@sentencing-server/trpc/src/*"],
      "~auth": ["libs/auth/src/index.ts"],
      "~auth0-jii": ["libs/auth0-jii/src/index.ts"],
      "~case-notes-server/*": ["apps/case-notes-server/src/*"],
      "~client-env-utils": ["libs/client-env-utils/src/index.ts"],
      "~datatypes": ["libs/datatypes/src/index.ts"],
      "~fastify-data-import-plugin": [
        "libs/common/fastify-data-import-plugin/src/index.ts"
      ],
      "~fastify-data-import-plugin/*": [
        "libs/common/fastify-data-import-plugin/src/*"
      ],
      "~fastify-data-import-plugin/testkit": [
        "libs/common/fastify-data-import-plugin/src/testkit/index.ts"
      ],
      "~firestore-api": ["libs/firestore-api/src/index.ts"],
      "~firestore-config": ["libs/firestore-config/src/index.ts"],
      "~fixture-generator": ["libs/fixture-generator/src/index.ts"],
      "~hydration-utils": ["libs/hydration-utils/src/index.ts"],
      "~repo": ["plugins/repo/src/index.ts"],
      "~sentencing-client": ["libs/sentencing-client/src/index.ts"],
      "~sentencing-server/*": ["apps/sentencing-server/src/*"],
      "~server-setup-plugin": ["libs/common/server-setup-plugin/src/index.ts"],
      "~server-setup-plugin/*": ["libs/common/server-setup-plugin/src/*"],
      "~shared-assets/*": ["libs/shared-assets/src/*"],
      "~staff-shared-server": ["libs/staff-shared-server/src/index.ts"],
      "~ui": ["libs/ui/src/index.ts"]
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "useDefineForClassFields": true
  },
  "exclude": ["node_modules", "tmp"]
}
