{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "paths": {
      "~auth": ["libs/auth/src/index.ts"],
      "~auth0-jii": ["libs/auth0-jii/src/index.ts"],
      "~case-notes-server/*": ["apps/case-notes-server/src/*"],
      "~client-env-utils": ["libs/client-env-utils/src/index.ts"],
      "~datatypes": ["libs/datatypes/src/index.ts"],
      "~fastify-data-import-plugin": [
        "libs/fastify-data-import-plugin/src/index.ts"
      ],
      "~fastify-data-import-plugin/*": [
        "libs/fastify-data-import-plugin/src/*"
      ],
      "~fastify-data-import-plugin/testkit": [
        "libs/fastify-data-import-plugin/src/testkit/index.ts"
      ],
      "~firestore-api": ["libs/firestore-api/src/index.ts"],
      "~firestore-config": ["libs/firestore-config/src/index.ts"],
      "~fixture-generator": ["libs/fixture-generator/src/index.ts"],
      "~hydration-utils": ["libs/hydration-utils/src/index.ts"],
      "~repo": ["plugins/repo/src/index.ts"],
      "~sentencing-client": ["libs/sentencing-client/src/index.ts"],
      "~sentencing-server-types/*": ["libs/sentencing-server-types/src/*"],
      "~sentencing-server/*": ["apps/sentencing-server/src/*"],
      "~server-setup-plugin": ["libs/common/server-setup-plugin/src/index.ts"],
      "~server-setup-plugin/*": ["libs/common/server-setup-plugin/src/*"],
      "~shared-assets/*": ["libs/shared-assets/src/*"]
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "useDefineForClassFields": true
  },
  "exclude": ["node_modules", "tmp"]
}
